<Window x:Class="Urlaubsplaner.View.HolidayApplication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Urlaubsplaner.View"
        mc:Ignorable="d"
        Title="Urlaubsantrag" Height="200" Width="400">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DatePicker SelectedDate="{Binding From}" Grid.Row="1" Grid.Column="1"/>
        <DatePicker SelectedDate="{Binding To}" Grid.Row="2" Grid.Column="1"/>
        <Label Content="Von" Grid.Row="1" Grid.Column="0"/>
        <Label Content="Bis" Grid.Row="2" Grid.Column="0"/>
        <Label Content="Resturlaub" Grid.Row="0" Grid.Column="0"/>
        <Label Content="{Binding VacationDays}" Grid.Row="0" Grid.Column="1"/>
        
        <Label Content="Resturlaub nach Buchung" Grid.Row="3" Grid.Column="0"/>
        <Label Content="{Binding RemainingVacationDays}" Grid.Row="3" Grid.Column="1"/>
        <Button Grid.Column="1" Command="{Binding AppliedClickCommand}" Content="Beantragen" Grid.Row="4"/>
    </Grid>
</Window>
